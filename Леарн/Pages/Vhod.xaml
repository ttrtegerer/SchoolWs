<Page x:Class="Леарн.Pages.Vhod"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Леарн.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Vhod">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock  Style="{StaticResource BlockCommon}" Width="100" Margin="10" Height="30" Text="Пароль:"></TextBlock>
                <TextBox Name="TBoxPassword" Width="150" Margin="3" FontFamily="Comic Sans MS"></TextBox>
            </StackPanel>
            <Button Height="30" Width="200" Margin="5" Name="BtnVhod"
                            Click="BtnVhod_Click" Content="Войти" Style="{StaticResource ButtonStyle}"></Button>
        </StackPanel>
    </Grid>
</Page>
