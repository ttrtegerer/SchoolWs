<Window x:Class="Леарн.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Леарн"
        mc:Ignorable="d"
        Title="Learn" FontFamily="Comic Sans MS"  Height="550" Width="900" MaxHeight="650" MaxWidth="1000" MinHeight="550" MinWidth="850">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="{StaticResource ColorSecondary}"></Grid>
        <Grid Grid.Row="2" Background="{StaticResource ColorSecondary}"></Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"></Frame>
        <Button x:Name="Nazad" Grid.Row="2"  VerticalAlignment="Center" HorizontalAlignment="Right" Style="{StaticResource ButtonStyle}" Content="Назад" Click="Nazad_Click"></Button>
        <Image Source="Resourse/school_logo.png" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Window>
